<div class="container mx-auto text-center" >
  <div class="card row-15 col-12 bg-light mt-5" >

<p style="color: green"><%= notice %></p>

<h1> <%= @group.name %>  Transactions </h1>

<% if @payments %>
  <div id="payments">
    <% @payments.each do |payment| %>
      <ul class="list-group mb-2" >
      <li class="list-group-item"><%= payment.name %></li>
      <li class="list-group-item list-group-item-primary"><%= payment.amount %></li>
      <%= link_to "Delete", user_group_payment_path(@user, @group, payment), method: :delete, data: { confirm: 'Are you sure?' } %>

      </ul>
      <% end %>
  </div>
<% else %>
  <p>No payments available.</p>
  <%= link_to "New payment", new_user_group_payment_path(@user, @group) %>
  <% end %>
  </div>

  <%= link_to "New payment", new_user_group_payment_path(@user, @group) %>
  <div class="footer mt-5" >
  <span class="btn btn-success" style="width: 100%"> Scan </span>
  </div>
</div>